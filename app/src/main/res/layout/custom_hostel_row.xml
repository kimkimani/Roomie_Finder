<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/ivHostelThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:contentDescription="@string/hostel_thumbnail"
        android:src="@drawable/ic_home_black"
        android:adjustViewBounds="true"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tvHostelListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Awesome Hostel"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_gravity="center_horizontal"
            android:textColor="#828282"/>
        <!--<TextView
            android:id="@+id/tvHostelListLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your awesome location"
            android:layout_gravity="center_horizontal"
            android:textColor="#828282"/>-->
        <RatingBar
            android:id="@+id/rbHostelRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:isIndicator="true"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"/>
        <TextView
            android:id="@+id/tvHostelListRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your awesome rating"
            android:layout_gravity="center_horizontal"
            android:textColor="#828282"/>
    </LinearLayout>

</LinearLayout>